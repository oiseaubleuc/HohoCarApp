<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HohoCarApp.Views.CarDetails"
             Title="Détails"
             BackgroundColor="#1a1a1a">

    <Grid RowDefinitions="*, Auto" Padding="20">
        <Grid Grid.Row="0" ColumnDefinitions="*, *" ColumnSpacing="20">

            <Frame Grid.Column="0" 
                   BackgroundColor="#2a2a2a" 
                   CornerRadius="15" 
                   Padding="10"
                   HasShadow="True">
                <Image Source="{Binding SelectedCar.ImageUrl}" 
                       Aspect="AspectFill" 
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill" />
            </Frame>

            <ScrollView Grid.Column="1">
                <VerticalStackLayout Spacing="15">

                    <Label Text="{Binding SelectedCar.Brand}" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White" />

                    <Label Text="{Binding SelectedCar.Model}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White" />

                    <Label Text="{Binding SelectedCar.Price, StringFormat='€{0:N0}'}" 
                           FontSize="26" 
                           FontAttributes="Bold" 
                           TextColor="#007AFF" 
                           Margin="0,10,0,20" />

                    <Label Text="{Binding SelectedCar.Description}" 
                           FontSize="16" 
                           TextColor="#CCCCCC" 
                           LineBreakMode="WordWrap" />

                    <Label Text="Caractéristiques :" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           Margin="0,20,0,10" />

                    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto,Auto,Auto" RowSpacing="10">

                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="{Binding SelectedCar.Year, StringFormat='Année : {0}'}" 
                               FontSize="16" 
                               TextColor="#CCCCCC" />

                        <Label Grid.Row="0" Grid.Column="1" 
                               Text="{Binding SelectedCar.Mileage, StringFormat='Kilométrage : {0:N0} km'}" 
                               FontSize="16" 
                               TextColor="#CCCCCC" 
                               HorizontalOptions="End" />

                        <Label Grid.Row="1" Grid.Column="0" 
                               Text="{Binding SelectedCar.Category, StringFormat='Catégorie : {0}'}" 
                               FontSize="16" 
                               TextColor="#CCCCCC" />

                        <Label Grid.Row="1" Grid.Column="1" 
                               Text="{Binding SelectedCar.Views, StringFormat='Vues : {0}'}" 
                               FontSize="16" 
                               TextColor="#CCCCCC" 
                               HorizontalOptions="End" />

                        <Label Grid.Row="2" Grid.Column="0" 
                               Text="{Binding SelectedCar.FuelType, StringFormat='Type de carburant : {0}'}" 
                               FontSize="16" 
                               TextColor="#CCCCCC" />

                        <Label Grid.Row="2" Grid.Column="1" 
                               Text="{Binding SelectedCar.Location, StringFormat='Localisation : {0}'}" 
                               FontSize="16" 
                               TextColor="#CCCCCC" 
                               HorizontalOptions="End" />

                    </Grid>

                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <Frame Grid.Row="1" 
               BackgroundColor="Transparent" 
               BorderColor="#CCCCCC" 
               CornerRadius="25" 
               Padding="20,15"
               Margin="0,20,0,0"
               HorizontalOptions="Center">
            <Button Text="← BackToList" 
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    Clicked="OnBackToListClicked" />
        </Frame>
    </Grid>
</ContentPage>
