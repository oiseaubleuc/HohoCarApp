<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HohoCarApp.Views.CarDetails"
             Title="Detail"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto" Padding="0">
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="16,8" BackgroundColor="White">
            <Button Text="&lt;" 
                    FontSize="20" 
                    BackgroundColor="Transparent" 
                    TextColor="Black"
                    Clicked="OnBackToListClicked"
                    WidthRequest="44" 
                    HeightRequest="44" />
            <Label Grid.Column="1" 
                   Text="Detail" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" />
            <Button Grid.Column="2" 
                    Text="⋮" 
                    FontSize="20" 
                    BackgroundColor="Transparent" 
                    TextColor="Black"
                    WidthRequest="44" 
                    HeightRequest="44" />
        </Grid>

        <ScrollView Grid.Row="1" Padding="16">
            <StackLayout Spacing="20">
                <Frame Padding="0" CornerRadius="12" HasShadow="True" BackgroundColor="White">
                    <Image Source="{Binding SelectedCar.ImageUrl}"
                           HeightRequest="250"
                           Aspect="AspectFill"
                           BackgroundColor="#f5f5f5" />
                </Frame>

                <StackLayout Spacing="8">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackLayout Grid.Column="0" Spacing="4">
                            <Label Text="{Binding SelectedCar.Brand, FallbackValue='Car Brand'}" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="Black" />
                            <Label Text="{Binding SelectedCar.Model, FallbackValue='Car Model'}" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="Black" />
                            <Label Text="{Binding SelectedCar.Category, StringFormat='{0}-Automatic', FallbackValue='SUV-Automatic'}" 
                                   FontSize="16" 
                                   TextColor="#666" />
                        </StackLayout>
                        <Label Grid.Column="1" 
                               Text="{Binding SelectedCar.Price, StringFormat='€{0:N0}', FallbackValue='€0'}" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="#007bff"
                               VerticalOptions="Start" />
                    </Grid>

                    <Label Text="{Binding SelectedCar.Description, FallbackValue='No description available'}" 
                           FontSize="14" 
                           TextColor="#666"
                           LineBreakMode="WordWrap" />
                </StackLayout>

                <StackLayout Spacing="12">
                    <Label Text="Properties" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="Black" />
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="16" RowSpacing="12">
                        <StackLayout Grid.Column="0" Grid.Row="0" Spacing="8">
                            
                        </StackLayout>
                        <StackLayout Grid.Column="1" Grid.Row="0" Spacing="8">
                            <Label Text="{Binding SelectedCar.FuelType, StringFormat='Fuel: {0}', FallbackValue='Fuel: Diesel'}" 
                                   FontSize="14" 
                                   TextColor="#666" />
                            
                        </StackLayout>
                        
                        <StackLayout Grid.Column="0" Grid.Row="1" Spacing="8">
                            <Label Text="{Binding SelectedCar.Year, StringFormat='Year: {0}', FallbackValue='Year: 2025'}" 
                                   FontSize="14" 
                                   TextColor="#666" />
                            <Label Text="{Binding SelectedCar.Mileage, StringFormat='Mileage: {0:N0} km', FallbackValue='Mileage: 0 km'}" 
                                   FontSize="14" 
                                   TextColor="#666" />
                        </StackLayout>
                        <StackLayout Grid.Column="1" Grid.Row="1" Spacing="8">
                            <Label Text="{Binding SelectedCar.Location, StringFormat='Location: {0}', FallbackValue='Location: Luik'}" 
                                   FontSize="14" 
                                   TextColor="#666" />
                            <Label Text="{Binding SelectedCar.Views, StringFormat='Views: {0}', FallbackValue='Views: 0'}" 
                                   FontSize="14" 
                                   TextColor="#666" />
                        </StackLayout>
                    </Grid>
                </StackLayout>
            </StackLayout>
        </ScrollView>

        <Frame Grid.Row="2" 
               Padding="16" 
               BackgroundColor="White" 
               HasShadow="True">
            <Button Text="buy" 
                    BackgroundColor="Black" 
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold" />
        </Frame>
    </Grid>

</ContentPage>
