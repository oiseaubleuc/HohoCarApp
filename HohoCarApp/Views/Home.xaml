<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="HohoCarApp.Views.Home"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#212121"
             Title="Home">

    <ScrollView>
        <StackLayout Spacing="0">
            
            <Frame BackgroundColor="#212121" 
                   Padding="20,40,20,20" 
                   HasShadow="False">
                <StackLayout Spacing="15">
                    <Label Text="HohoCar" 
                           FontSize="32" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    
                    <Label Text="Sportieve auto Sales" 
                           FontSize="18" 
                           TextColor="#cccccc" 
                           HorizontalOptions="Center"/>
                    
                    <Label Text="Find Your Perfect Car" 
                           FontSize="16" 
                           TextColor="#cccccc" 
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" 
                   Margin="20,0,20,20" 
                   Padding="20" 
                   CornerRadius="12" 
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="Welkom bij HohoCar" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#333333" 
                           HorizontalOptions="Center"/>
                    
                    <Label Text="Ontdek mijn Maui App voor school, een integratieve auto verkoop app " 
                           FontSize="16" 
                           TextColor="#666666" 
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                    
                    <Button Text="Browse Cars" 
                            Command="{Binding BrowseCarsCommand}"
                            BackgroundColor="#2196F3" 
                            TextColor="White" 
                            FontSize="16" 
                            FontAttributes="Bold" 
                            CornerRadius="8" 
                            HeightRequest="50" 
                            Margin="0,10,0,0"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" 
                   Margin="20,0,20,20" 
                   Padding="20" 
                   CornerRadius="12" 
                   HasShadow="True">
                <StackLayout Spacing="20">
                    <Label Text="waarom HohoCar?" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#333333" 
                           HorizontalOptions="Center"/>
                    
                    <StackLayout Orientation="Horizontal" Spacing="15">
                        <Label  FontSize="24" VerticalOptions="Center"/>
                        <StackLayout Spacing="5">
                            <Label Text="Sportieve wagens aanbiedingen" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#333333"/>
                            <Label Text="Waarom Sportieve wagens?" 
                                   FontSize="14" 
                                   TextColor="#666666"/>
                        </StackLayout>
                    </StackLayout>
                    
                    <StackLayout Orientation="Horizontal" Spacing="15">
                        <Label FontSize="24" VerticalOptions="Center"/>
                        <StackLayout Spacing="5">
                            <Label Text="prijzen aanpasbaar op klantenaanvraag en voordeliger dan gekende autobedrijven" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#333333"/>
                            <Label Text="Wat het beste voor uw investeringen kan zijn, kan je hier terechtvinden " 
                                   FontSize="14" 
                                   TextColor="#666666"/>
                        </StackLayout>
                    </StackLayout>
                    
                  
                    <StackLayout Orientation="Horizontal" Spacing="15">
                        <Label  FontSize="24" VerticalOptions="Center"/>
                        <StackLayout Spacing="5">
                            <Label Text="Kwalitatieve verkoop zowel klantvriendelijkheid en auto status" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#333333"/>
                            <Label Text="Gereviseerde auto's" 
                                   FontSize="14" 
                                   TextColor="#666666"/>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </Frame>

       
            <Frame BackgroundColor="#212121" 
                   Padding="20,15" 
                   HasShadow="True">
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                    
                  
                    <StackLayout Grid.Column="0" 
                                 Orientation="Vertical" 
                                 HorizontalOptions="Center">
                        <Label Text="🏠" 
                               FontSize="20" 
                               HorizontalOptions="Center"/>
                        <Label Text="Home" 
                               FontSize="12" 
                               TextColor="#2196F3" 
                               HorizontalOptions="Center"/>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeClicked" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    
                   
                    <StackLayout Grid.Column="1" 
                                 Orientation="Vertical" 
                                 HorizontalOptions="Center">
                        <Label Text="🚗" 
                               FontSize="20" 
                               HorizontalOptions="Center"/>
                        <Label Text="Cars" 
                               FontSize="12" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCarsClicked" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    
                 
                    <StackLayout Grid.Column="2" 
                                 Orientation="Vertical" 
                                 HorizontalOptions="Center">
                        <Label Text="📰" 
                               FontSize="20" 
                               HorizontalOptions="Center"/>
                        <Label Text="News" 
                               FontSize="12" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnNewsClicked" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    
                 
                    <StackLayout Grid.Column="3" 
                                 Orientation="Vertical" 
                                 HorizontalOptions="Center">
                        <Label Text="🔐" 
                               FontSize="20" 
                               HorizontalOptions="Center"/>
                        <Label Text="Login" 
                               FontSize="12" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLoginClicked" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    
                </Grid>
            </Frame>
            
        </StackLayout>
    </ScrollView>

</ContentPage>


